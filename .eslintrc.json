{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "warn",
    "no-unused-vars": [
      "error",
      { "args": "none" }
    ],
    "no-var": "error",
    "prefer-const": "error",
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreComments": true,
        "ignoreUrls": true
      }
    ]
  }
}
